<div class="add-manufacturer-div">
    <a href="/manufacturer-list" class="add-manufacturer-link"><button class="button1">Manufacturers</button></a>
</div>
<div class="back-to-inv-div">
    <a href="/inventory-list" class="inv-list-link"><button class="button1">Back to Items</button></a>
</div>
<h1>
    Categories
</h1>
<div class="button-div">
    <button class="button2" id="myBtn">Add a Category</button>
</div>
<div id="myModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <span class="close">&times;</span>
            <h2>Add a Category</h2>
        </div>
            <form method="POST" action="/add-category">

                <div>
                    <input class="text-input" type="text" name="value" placeholder="Category" />
                </div>
                <input type="hidden" name="id" value="{{cat.id}}" />
                <div class="button-div">
                    <button class="button2" type="submit">Add Category</button>
                </div>
            </form>
            <br />
        </form>
    </div>
</div>
<table id="buzzdList" class="display">
    <thead>
        <tr>
            <th>Manufacturer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each cat}}
        <tr>
            <td>{{this.value}}</td>
            <td><a href="/add-category/{{this.id}}"><button class="edit">Edit</button></a><a
                    href="/delete-category/{{this.id}}"><button class="delete">X</button></a>
        </tr>
        {{/each}}
    </tbody>
</table>
<script>
    var modal = document.getElementById("myModal");
    var btn = document.getElementById("myBtn");
    var span = document.getElementsByClassName("close")[0];

    btn.onclick = function () {
        modal.style.display = "block";
    }

    span.onclick = function () {
        modal.style.display = "none";
    }

    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>