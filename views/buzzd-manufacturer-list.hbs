<div class="add-category-div">
    <a href="/category-list"><button class="button1">Categories</button></a>
</div>
<div class="back-to-inv-div">
    <a href="/inventory-list"><button class="button1">Back to Items</button></a>
</div>
<div>
    <h1>Manufacturers</h1>
</div>
<div class="button-div">
        <button class="button2" id="myBtn">Add a Manufacturer</button>

</div>

<div id="myModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <span class="close">&times;</span>
            <h2>Add a Manufacturer</h2>
        </div>
        <div class="content">
            <h1>Add a Manufacturer</h1>
        </div>
        <form method="POST" action="/add-manufacturer">

            <div>
                <input class="text-input" type="text" name="value" placeholder="Manufacturer" />
            </div>
            <input type="hidden" name="id" value="{{man.id}}" />
            <div class="button-div">
                <button class="button2" type="submit">Add Manufacturer</button>
            </div>
        </form>
        <br />
    </div>
</div>

<table id="buzzdList" class="display">
    <thead>
        <tr>
            <th>Manufacturer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each man}}
        <tr>
            <td>{{this.value}}</td>
            <td>
                <a href="/add-manufacturer/{{this.id}}"><button class="edit">Edit</button></a>
                <a href="/delete-manufacturer/{{this.id}}"><button class="delete">X</button></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script>
    var modal = document.getElementById("myModal");
    var btn = document.getElementById("myBtn");
    var span = document.getElementsByClassName("close")[0];

    btn.onclick = function () {
        modal.style.display = "block";
    }

    span.onclick = function () {
        modal.style.display = "none";
    }

    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>